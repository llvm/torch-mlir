load("@llvm-project//llvm:lit_test.bzl", "lit_test")

package(default_visibility = ["//visibility:public"])

[
    lit_test(
        name = "%s.test" % src,
        srcs = [src],
        data = [
            "@torch-mlir//:torch-mlir-dialects-opt",
            "@torch-mlir//externals/llvm-external-projects/torch-mlir-dialects/test:lit_data",
        ],
    )
    for src in glob(["**/*.mlir"])
]
